<div class="container">
  <div class="row">
    <div class="col m-5">

      <%= form_for [@company, @founder] do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_area :title, class: "form-control" %>
      </div>
      <%= f.submit "Save", class: "btn btn-primary"%>

      <% end %>
    </div>

  </div>


</div>

