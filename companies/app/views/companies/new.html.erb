<div class="container border border-danger m-5">
  <div class="row">
    <div class="col md-6">
    <h2>Create a New Company</h2>
        <%= form_for @company do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="row">
            <div class="form-group  mx-sm-3 mb-2">
              <%= f.label :city %>
              <%= f.text_area :city, class: "form-control" %>
            </div>
            <div class="form-group mx-sm-3 mb-2">
              <%= f.label :state %>
              <%= f.text_area :state, class: "form-control" %>
            </div>


        </div>

        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_field :description, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :founded_date %>
          <%= f.text_field :founded_date, class: "form-control", id: "date-picker" %>
        </div>



        <%= f.submit "Save", class: "btn btn-primary"%>

        <% end %>

    </div>

  </div>

</div>

