{
  "name": "api",
  "version": "1.0.0",
  "description": "techstars fullstack challenge app",
  "main": "app.js",
  "scripts": {
    "test": "jest",
    "start": "npm run dev",
    "prod": "cross-env NODE_ENV=production webpack --watch",
    "dev": "webpack --watch",
    "build": "npm run build:dev",
    "build:dev": "webpack --config ./webpack.config.js --progress --profile --color --display-error-details --display-cached && npm run copy-files",
    "build:prod": "cross-env NODE_ENV=production webpack --config ./webpack.config.js  --progress --profile --color --display-error-details --display-cached --bail && npm run copy-files",
    "copy-files": "node copyFiles.js",
    "clean": "npm cache clear && rimraf -- dist"
  },
  "keywords": [],
  "author": "Ashraf KM",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.3",
    "compression": "^1.7.2",
    "config": "^1.30.0",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "debug": "^3.1.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "express-status-monitor": "^1.0.1",
    "helmet": "^3.12.1",
    "joi": "^13.4.0",
    "method-override": "^2.3.10",
    "moment": "^2.22.2",
    "mongoose": "^5.10.15",
    "morgan": "^1.9.0",
    "npm": "^6.4.1",
    "underscore": "^1.9.1",
    "validator": "^10.4.0",
    "wicket": "^1.3.3",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.2.3",
    "@types/body-parser": "1.17.0",
    "@types/compression": "^0.0.36",
    "@types/config": "^0.0.34",
    "@types/cookie-parser": "^1.4.1",
    "@types/debug": "^0.0.30",
    "@types/del": "^3.0.1",
    "@types/errorhandler": "^0.0.32",
    "@types/express": "^4.16.0",
    "@types/express-session": "^1.15.10",
    "@types/helmet": "^0.0.38",
    "@types/jest": "^26.0.15",
    "@types/method-override": "^0.0.31",
    "@types/mongodb": "^3.1.1",
    "@types/mongoose": "^5.2.0",
    "@types/morgan": "^1.7.35",
    "@types/node": "^14.14.9",
    "@types/webpack": "^4.4.0",
    "cross-env": "^5.1.6",
    "jest": "^26.6.3",
    "nodemon": "^1.17.5",
    "nodemon-webpack-plugin": "^4.0.3",
    "shelljs": "^0.8.2",
    "ts-jest": "^22.4.6",
    "ts-loader": "^4.4.1",
    "ts-node": "^6.1.1",
    "tslint": "^5.10.0",
    "typescript": "^4.1.2",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.4",
    "webpack-merge": "^4.1.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.(ts|js)x?$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/tests/**/*.spec.(ts|js)"
    ],
    "testEnvironment": "node"
  }
}
